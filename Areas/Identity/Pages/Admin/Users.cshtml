@page
@model WebVerdandiMedReg.Pages.Admin.UsersModel

<h1>User Management</h1>
<h2>Create new user</h2>


<form method="post" asp-page-handler="CreateUser" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input class="form-control" placeholder="Email"
                   asp-for="NewEmail" required />
        </div>
        <div class="col-md-4">
            <input class="form-control" placeholder="Password"
                   asp-for="NewPassword" type="password" required />
        </div>
        <div class="col-md-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Roles</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            var isPowerUser = u.Roles.Contains("PowerUser");
            var isSuperAdmin = u.Roles.Contains("SuperAdmin");

            <tr>
                <td>@u.Email</td>
                <td>@u.UserName</td>
                <td>@string.Join(", ", u.Roles)</td>
                <td>
                    @if (isSuperAdmin)
                    {
                        <span class="text-muted">SuperAdmin</span>
                    }
                    else if (!isPowerUser)
                    {
                        <form method="post" asp-page-handler="MakePowerUser" style="display:inline;">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button class="btn btn-sm btn-primary" type="submit">Grant PowerUser</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="RemovePowerUser" style="display:inline;">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button class="btn btn-sm btn-outline-danger" type="submit">Remove PowerUser</button>
                        </form>
                    }
                    <form method="post" asp-page-handler="DeleteUser" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="id" value="@u.Id" />
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
